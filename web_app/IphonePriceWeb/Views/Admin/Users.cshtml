@model IEnumerable<IphonePriceWeb.Data.Entities.UsersMaskedView>

@{
    ViewData["Title"] = "Kullanıcı Yönetimi";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="bi bi-people"></i> Kullanıcı Yönetimi</h2>
        <span class="badge bg-info">v_users_masked view (maskeleme)</span>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="card shadow">
        <div class="card-header">
            <h5 class="mb-0">Kullanıcı Listesi</h5>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead class="table-light">
                        <tr>
                            <th>ID</th>
                            <th>Kullanıcı Adı</th>
                            <th>Maskeli Ad</th>
                            <th>E-posta (Maskeli)</th>
                            <th>Rol</th>
                            <th class="text-center">Tahmin Sayısı</th>
                            <th class="text-center">Durum</th>
                            <th>Kayıt Tarihi</th>
                            <th>İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var user in Model)
                        {
                            <tr>
                                <td>@user.UserId</td>
                                <td><strong>@user.Username</strong></td>
                                <td><code>@user.UsernameMasked</code></td>
                                <td><code>@(user.EmailMasked ?? "-")</code></td>
                                <td>
                                    @if (user.RoleName == "Admin")
                                    {
                                        <span class="badge bg-danger">@user.RoleName</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-primary">@user.RoleName</span>
                                    }
                                </td>
                                <td class="text-center">@user.PredictionCount</td>
                                <td class="text-center">
                                    @if (user.IsActive)
                                    {
                                        <span class="badge bg-success">Aktif</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">Pasif</span>
                                    }
                                </td>
                                <td>@user.CreatedAt.ToString("dd.MM.yyyy")</td>
                                <td>
                                    <a asp-action="AssignRole" asp-route-id="@user.UserId" class="btn btn-sm btn-outline-primary">
                                        <i class="bi bi-person-badge"></i> Rol Ata
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <div class="mt-3">
        <a asp-action="Dashboard" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left"></i> Dashboard'a Dön
        </a>
    </div>
</div>


@model IphonePriceWeb.Models.SpecsUpdateModel

@{
    ViewData["Title"] = "Specs Düzenle";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0"><i class="bi bi-pencil"></i> Specs Düzenle</h5>
                    <span class="badge bg-info">sp_admin_update_specs</span>
                </div>
                <div class="card-body">
                    <form asp-action="EditSpecs" method="post">
                        <input type="hidden" asp-for="SpecsId" />
                        <input type="hidden" asp-for="ModelId" />
                        
                        <div class="alert alert-info">
                            <strong>Model:</strong> 
                            @{
                                var selectedModel = ((Microsoft.AspNetCore.Mvc.Rendering.SelectList)ViewBag.Models).FirstOrDefault(x => x.Value == Model.ModelId.ToString());
                            }
                            @(selectedModel?.Text ?? Model.ModelId.ToString())
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="RamGb" class="form-label"></label>
                                <input asp-for="RamGb" type="number" class="form-control" />
                                <span asp-validation-for="RamGb" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="StorageGb" class="form-label"></label>
                                <select asp-for="StorageGb" class="form-select">
                                    <option value="64">64 GB</option>
                                    <option value="128">128 GB</option>
                                    <option value="256">256 GB</option>
                                    <option value="512">512 GB</option>
                                    <option value="1024">1 TB</option>
                                </select>
                                <span asp-validation-for="StorageGb" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-4 mb-3">
                                <label asp-for="KameraMp" class="form-label"></label>
                                <input asp-for="KameraMp" type="number" class="form-control" />
                                <span asp-validation-for="KameraMp" class="text-danger"></span>
                            </div>
                            <div class="col-md-4 mb-3">
                                <label asp-for="EkranBoyutu" class="form-label"></label>
                                <input asp-for="EkranBoyutu" type="number" step="0.1" class="form-control" />
                                <span asp-validation-for="EkranBoyutu" class="text-danger"></span>
                            </div>
                            <div class="col-md-4 mb-3">
                                <label asp-for="BataryaMah" class="form-label"></label>
                                <input asp-for="BataryaMah" type="number" class="form-control" />
                                <span asp-validation-for="BataryaMah" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-check-lg"></i> Güncelle
                            </button>
                            <a asp-action="Specs" class="btn btn-outline-secondary">İptal</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}


@model IphonePriceWeb.Models.SpecsFormModel

@{
    ViewData["Title"] = "Specs Ekle";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0"><i class="bi bi-plus-lg"></i> Yeni Specs Ekle</h5>
                    <span class="badge bg-info">sp_admin_add_specs</span>
                </div>
                <div class="card-body">
                    <form asp-action="AddSpecs" method="post">
                        <div class="mb-3">
                            <label asp-for="ModelId" class="form-label"></label>
                            <select asp-for="ModelId" class="form-select" asp-items="ViewBag.Models">
                                <option value="">-- Model Seçin --</option>
                            </select>
                            <span asp-validation-for="ModelId" class="text-danger"></span>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="RamGb" class="form-label"></label>
                                <input asp-for="RamGb" type="number" class="form-control" placeholder="6" />
                                <span asp-validation-for="RamGb" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="StorageGb" class="form-label"></label>
                                <select asp-for="StorageGb" class="form-select">
                                    <option value="64">64 GB</option>
                                    <option value="128">128 GB</option>
                                    <option value="256">256 GB</option>
                                    <option value="512">512 GB</option>
                                    <option value="1024">1 TB</option>
                                </select>
                                <span asp-validation-for="StorageGb" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-4 mb-3">
                                <label asp-for="KameraMp" class="form-label"></label>
                                <input asp-for="KameraMp" type="number" class="form-control" placeholder="48" />
                                <span asp-validation-for="KameraMp" class="text-danger"></span>
                            </div>
                            <div class="col-md-4 mb-3">
                                <label asp-for="EkranBoyutu" class="form-label"></label>
                                <input asp-for="EkranBoyutu" type="number" step="0.1" class="form-control" placeholder="6.1" />
                                <span asp-validation-for="EkranBoyutu" class="text-danger"></span>
                            </div>
                            <div class="col-md-4 mb-3">
                                <label asp-for="BataryaMah" class="form-label"></label>
                                <input asp-for="BataryaMah" type="number" class="form-control" placeholder="3349" />
                                <span asp-validation-for="BataryaMah" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-check-lg"></i> Kaydet
                            </button>
                            <a asp-action="Specs" class="btn btn-outline-secondary">İptal</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}


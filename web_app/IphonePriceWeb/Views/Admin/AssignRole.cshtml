@model IphonePriceWeb.Models.RoleAssignModel

@{
    ViewData["Title"] = "Rol Ata";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0"><i class="bi bi-person-badge"></i> Rol Ata</h5>
                    <span class="badge bg-info">sp_admin_assign_role</span>
                </div>
                <div class="card-body">
                    <div class="alert alert-info">
                        <strong>Kullanıcı:</strong> @ViewBag.UserName
                    </div>
                    
                    <form asp-action="AssignRole" method="post">
                        <input type="hidden" asp-for="UserId" />
                        
                        <div class="mb-3">
                            <label asp-for="RoleName" class="form-label"></label>
                            <select asp-for="RoleName" class="form-select" asp-items="ViewBag.Roles">
                                <option value="">-- Rol Seçin --</option>
                            </select>
                            <span asp-validation-for="RoleName" class="text-danger"></span>
                        </div>

                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-check-lg"></i> Rol Ata
                            </button>
                            <a asp-action="Users" class="btn btn-outline-secondary">İptal</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}


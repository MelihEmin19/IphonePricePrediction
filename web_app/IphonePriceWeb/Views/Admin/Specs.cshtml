@model IEnumerable<IphonePriceWeb.Data.Entities.SpecsCatalogView>

@{
    ViewData["Title"] = "Specs Yönetimi";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="bi bi-cpu"></i> Specs Yönetimi</h2>
        <div>
            <span class="badge bg-info me-2">v_specs_catalog view + fn_specs_label</span>
            <a asp-action="AddSpecs" class="btn btn-primary">
                <i class="bi bi-plus-lg"></i> Specs Ekle
            </a>
        </div>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="card shadow">
        <div class="card-header">
            <h5 class="mb-0">Specs Listesi</h5>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover table-sm">
                    <thead class="table-light">
                        <tr>
                            <th>ID</th>
                            <th>Label (fn_specs_label)</th>
                            <th>Model</th>
                            <th>Segment</th>
                            <th class="text-center">RAM</th>
                            <th class="text-center">Depolama</th>
                            <th class="text-center">Kamera</th>
                            <th class="text-center">Ekran</th>
                            <th class="text-center">Batarya</th>
                            <th>İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var spec in Model)
                        {
                            <tr>
                                <td>@spec.SpecsId</td>
                                <td><strong>@spec.Label</strong></td>
                                <td>@spec.ModelName</td>
                                <td><span class="badge bg-secondary">@spec.SegmentName</span></td>
                                <td class="text-center">@spec.RamGb GB</td>
                                <td class="text-center">@spec.StorageGb GB</td>
                                <td class="text-center">@spec.KameraMp MP</td>
                                <td class="text-center">@spec.EkranBoyutu"</td>
                                <td class="text-center">@spec.BataryaMah mAh</td>
                                <td>
                                    <a asp-action="EditSpecs" asp-route-id="@spec.SpecsId" class="btn btn-sm btn-outline-primary">
                                        <i class="bi bi-pencil"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <div class="mt-3">
        <a asp-action="Dashboard" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left"></i> Dashboard'a Dön
        </a>
    </div>
</div>


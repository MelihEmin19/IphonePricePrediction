@model IEnumerable<IphonePriceWeb.Data.Entities.UserHistoryView>

@{
    ViewData["Title"] = "Tahmin Listesi";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="bi bi-graph-up"></i> Tahmin Listesi</h2>
        <span class="badge bg-info">v_user_history_masked view (maskeleme)</span>
    </div>

    <div class="card shadow">
        <div class="card-header">
            <h5 class="mb-0">Son 100 Tahmin</h5>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover table-sm">
                    <thead class="table-light">
                        <tr>
                            <th>ID</th>
                            <th>Kullanıcı (Maskeli)</th>
                            <th>Cihaz</th>
                            <th>Durum</th>
                            <th class="text-end">Tahmin Fiyatı</th>
                            <th class="text-center">Güven</th>
                            <th>Tarih</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var pred in Model)
                        {
                            <tr>
                                <td>@pred.PredictionId</td>
                                <td><code>@pred.UsernameMasked</code></td>
                                <td><strong>@pred.SpecsLabel</strong></td>
                                <td><span class="badge bg-secondary">@pred.ConditionName</span></td>
                                <td class="text-end text-success fw-bold">@pred.FormattedPrice</td>
                                <td class="text-center">
                                    @if (pred.ConfidenceScore.HasValue)
                                    {
                                        <span class="badge bg-info">%@pred.ConfidenceScore.Value.ToString("N1")</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">-</span>
                                    }
                                </td>
                                <td>@pred.CreatedAt.ToString("dd.MM.yyyy HH:mm")</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <div class="mt-3">
        <a asp-action="Dashboard" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left"></i> Dashboard'a Dön
        </a>
    </div>
</div>


@model IphonePriceWeb.Models.PhoneModel
@{
    ViewData["Title"] = $"{Model?.Name} Detayları";
}

<div class="container mt-4">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Ana Sayfa</a></li>
            <li class="breadcrumb-item"><a asp-action="Index">Modeller</a></li>
            <li class="breadcrumb-item active">@Model?.Name</li>
        </ol>
    </nav>

    <div class="row">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0"><i class="bi bi-phone me-2"></i>@Model?.Name</h4>
                </div>
                <div class="card-body">
                    <table class="table table-striped">
                        <tr>
                            <th style="width: 200px;">Model ID</th>
                            <td>@ViewBag.ModelId</td>
                        </tr>
                        <tr>
                            <th>Model Adı</th>
                            <td>@Model?.Name</td>
                        </tr>
                        <tr>
                            <th>Marka</th>
                            <td>@(Model?.BrandName ?? "Apple")</td>
                        </tr>
                        <tr>
                            <th>Çıkış Yılı</th>
                            <td>@Model?.ReleaseYear</td>
                        </tr>
                        <tr>
                            <th>Son Güncelleme</th>
                            <td>@ViewBag.LastUpdated</td>
                        </tr>
                    </table>

                    <hr />

                    <h5>Mevcut Konfigürasyonlar</h5>
                    <div class="row mt-3">
                        <div class="col-md-4">
                            <div class="card bg-light">
                                <div class="card-body text-center">
                                    <h6>64 GB</h6>
                                    <small class="text-muted">4 GB RAM</small>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="card bg-light">
                                <div class="card-body text-center">
                                    <h6>128 GB</h6>
                                    <small class="text-muted">4-6 GB RAM</small>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="card bg-light">
                                <div class="card-body text-center">
                                    <h6>256 GB</h6>
                                    <small class="text-muted">4-6 GB RAM</small>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-footer">
                    <a asp-controller="Home" asp-action="Index" class="btn btn-primary">
                        <i class="bi bi-calculator me-1"></i>Bu Model İçin Fiyat Tahmin Et
                    </a>
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="bi bi-arrow-left me-1"></i>Geri
                    </a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <!-- PartialView kullanımı -->
            <partial name="_ModelStatsPartial" model="Model" />
        </div>
    </div>
</div>


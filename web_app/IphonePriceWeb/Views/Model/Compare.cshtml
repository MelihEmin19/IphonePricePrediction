@{
    ViewData["Title"] = "Model Karşılaştırma";
    var models = ViewBag.Models as List<IphonePriceWeb.Models.PhoneModel>;
}

<div class="container mt-4">
    <h2><i class="bi bi-bar-chart me-2"></i>Model Karşılaştırma</h2>
    <p class="text-muted">İki iPhone modelini karşılaştırın</p>
    
    <hr />

    <div class="card shadow">
        <div class="card-body">
            <form asp-action="CompareResult" method="post">
                <div class="row">
                    <div class="col-md-5">
                        <label class="form-label">1. Model Seçin</label>
                        <select name="model1Id" class="form-select" required>
                            <option value="">-- Seçin --</option>
                            @if (models != null)
                            {
                                @foreach (var m in models)
                                {
                                    <option value="@m.Id">@m.Name (@m.ReleaseYear)</option>
                                }
                            }
                        </select>
                    </div>
                    <div class="col-md-2 text-center align-self-end">
                        <i class="bi bi-arrow-left-right text-primary" style="font-size: 2rem;"></i>
                    </div>
                    <div class="col-md-5">
                        <label class="form-label">2. Model Seçin</label>
                        <select name="model2Id" class="form-select" required>
                            <option value="">-- Seçin --</option>
                            @if (models != null)
                            {
                                @foreach (var m in models)
                                {
                                    <option value="@m.Id">@m.Name (@m.ReleaseYear)</option>
                                }
                            }
                        </select>
                    </div>
                </div>
                <div class="text-center mt-4">
                    <button type="submit" class="btn btn-primary btn-lg">
                        <i class="bi bi-check2-all me-2"></i>Karşılaştır
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

